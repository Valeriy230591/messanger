
<div class="card {{#if active}}card--active{{/if}}">
  <div class="info">
    <div class="no-photo"></div>
    <div class="left-info">
      <p class="info-name">{{name}}</p>
      <div class="last-message">{{text}}</div>
    </div>
  </div>
  <div class="right-info">
    <p class="time">{{time}}</p>
    {{#if count}}
      <p class="count">{{count}}</p>
    {{/if}}
  </div>
</div>
